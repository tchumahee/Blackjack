<Window x:Class="Blackjack.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Blackjack"
        mc:Ignorable="d"
        Title="Blackjack" Height="580.5" Width="1005.5">

    <Canvas Margin="0,0,-7,-21">
        <Canvas.Background>
            <SolidColorBrush Color="#4d4263"></SolidColorBrush>
            <!--<ImageBrush ImageSource="Assets/Images/TableTexture2.png"></ImageBrush>-->
        </Canvas.Background>
        <Rectangle Height="298" Canvas.Left="41" Canvas.Top="226" Width="917" Style="{StaticResource PlayArea}" RenderTransformOrigin="0.5,0.5">
            <Rectangle.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform AngleY="-0.095"/>
                    <RotateTransform/>
                    <TranslateTransform Y="-0.748"/>
                </TransformGroup>
            </Rectangle.RenderTransform>
        </Rectangle>
        <Rectangle x:Name="card1" Style="{StaticResource PlayingCard}" Canvas.Left="102" Canvas.Top="272"/>
        <Rectangle Style="{StaticResource PlayingCard}" Canvas.Left="140" Canvas.Top="286" RenderTransformOrigin="1.833,0.693"/>
        <Button Content="Hit [E]" Height="40" Canvas.Left="718" Canvas.Top="331" Width="186" Style="{StaticResource PanelButton}"/>
        <Button Content="Stay [S]" Height="40" Canvas.Left="718" Canvas.Top="393" Width="186" Style="{StaticResource PanelButton}"/>
        <Button Content="Submit score" Height="40" Canvas.Left="718" Canvas.Top="453" Width="186" Style="{StaticResource PanelButton}"/>
        <Label Content="Dealer" Height="38" Canvas.Left="333" Canvas.Top="33" Width="78" Style="{StaticResource GameText}"/>
        <Rectangle x:Name="card1_Copy" Style="{StaticResource PlayingCardBack}" Canvas.Left="416" Canvas.Top="31" Height="111" Width="80"/>
        <Rectangle Style="{StaticResource PlayingCard}" Canvas.Left="440" Canvas.Top="39" RenderTransformOrigin="1.833,0.693" Height="112" Width="80"/>
        <Rectangle Style="{StaticResource PlayingCardBack}" Canvas.Left="84" Canvas.Top="33" RenderTransformOrigin="1.833,0.693" Height="112" Width="80"/>
        <Rectangle Style="{StaticResource PlayingCardBack}" Canvas.Left="87" Canvas.Top="36" RenderTransformOrigin="1.833,0.693" Height="112" Width="80"/>
        <Rectangle Style="{StaticResource PlayingCardBack}" Canvas.Left="90" Canvas.Top="39" RenderTransformOrigin="1.833,0.693" Height="112" Width="80"/>
        <Label Content="Current bet:" Height="38" Foreground="Black" Canvas.Left="718" Canvas.Top="248" Width="186" Style="{StaticResource GameText}"/>
        <Label Content="Score:" Height="38" Foreground="Black" Canvas.Left="718" Canvas.Top="279" Width="186" Style="{StaticResource GameText}"/>
    </Canvas>
</Window>
